#include "PasswordBookDialogRes.h"
#include "../../GuiCommon.rc"

#define xc 400
#define yc 300

// Main Password Book Dialog (like Bandizip's Password Manager)
IDD_PASSWORD_BOOK  DIALOG  0, 0, xs, ys  MY_MODAL_RESIZE_DIALOG_STYLE  MY_FONT
CAPTION "Password Manager"
BEGIN
  // List with Password and DisplayName columns
  CONTROL    "", IDL_PASSWORD_BOOK_LIST, "SysListView32", LVS_REPORT | LVS_SINGLESEL | LVS_SHOWSELALWAYS | WS_BORDER | WS_TABSTOP, m, m, xc - 70, yc - 50
  
  // Right side buttons
  PUSHBUTTON "Add", IDB_PASSWORD_BOOK_ADD, xc - 60, m, 58, 18
  PUSHBUTTON "Delete", IDB_PASSWORD_BOOK_DELETE, xc - 60, m + 22, 58, 18
  PUSHBUTTON "Edit", IDB_PASSWORD_BOOK_EDIT, xc - 60, m + 44, 58, 18
  
  // Move up/down buttons  
  PUSHBUTTON "Up", IDB_PASSWORD_BOOK_MOVE_UP, xc - 60, m + 74, 58, 18
  PUSHBUTTON "Down", IDB_PASSWORD_BOOK_MOVE_DOWN, xc - 60, m + 96, 58, 18
  
  // Import/Export buttons
  PUSHBUTTON "Import...", IDB_PASSWORD_BOOK_IMPORT, xc - 60, m + 126, 58, 18
  PUSHBUTTON "Export...", IDB_PASSWORD_BOOK_EXPORT, xc - 60, m + 148, 58, 18
  
  // Info text
  LTEXT      "Double-click to select", IDT_PASSWORD_BOOK_INFO, m, yc - 42, xc - 70, 8
  
  // Bottom buttons
  PUSHBUTTON "Select", IDB_PASSWORD_BOOK_SELECT, m, yc - 26, 60, 18
  DEFPUSHBUTTON  "Close", IDCANCEL, xc - 60, yc - 26, 58, 18
END

// Password Entry Dialog (for Add/Edit - like Bandizip's)
#undef xc
#undef yc
#define xc 260
#define yc 110

IDD_PASSWORD_ENTRY  DIALOG  0, 0, xs, ys  MY_MODAL_DIALOG_STYLE  MY_FONT
CAPTION "Add Password"
BEGIN
  LTEXT      "Password:", IDT_PASSWORD_ENTRY_PASSWORD, m, m, xc - m - m, 8
  EDITTEXT   IDE_PASSWORD_ENTRY_PASSWORD, m, m + 12, xc - m - m, 14, ES_AUTOHSCROLL
  
  LTEXT      "Display Name (optional):", IDT_PASSWORD_ENTRY_NAME, m, m + 34, xc - m - m, 8
  EDITTEXT   IDE_PASSWORD_ENTRY_NAME, m, m + 46, xc - m - m, 14, ES_AUTOHSCROLL
  
  DEFPUSHBUTTON  "OK", IDOK, xc - m - 60 - 4 - 60, yc - m - 18, 60, 18
  PUSHBUTTON     "Cancel", IDCANCEL, xc - m - 60, yc - m - 18, 60, 18
END
